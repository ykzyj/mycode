<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#ffffff"
		    android:orientation="vertical"
		    >
		    
		    <com.sunnyit.common.view.TopBarView 
		        android:id="@+id/topbar_hidden_check"
		        android:layout_width="match_parent"
		        android:layout_height="48dp"
		        android:background="@drawable/login_bg"
		        yk:titletext="企业隐患选择列表"
		        yk:titletextcolor="#ffffff"
		        yk:titletextsize="18sp"
		        yk:lefttext="返回"
		        yk:lefttextcolor="#ffffff"
		        yk:lefttextsize="12sp"
		        yk:leftbackground="@drawable/top_left_button"
		        yk:righttext="添加"
		        yk:rightcolor="#ffffff"
		        yk:rightsize="12sp"
		        yk:rightbackground="@drawable/top_right_button"
		        />
		    
		    <android.support.v4.view.ViewPager
		        android:id="@+id/viewpager_hidden_check"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1" 
		        android:layout_below="@+id/topbar_hidden_check"
		        />
		    
		    <include 
		        layout="@layout/common_tab"
		        android:id="@+id/include_tab"
		        />
		    
		</LinearLayout>
		
		<com.sunnyit.common.view.CustomFAB
			    android:id="@+id/company_hidden_search"
		        android:layout_width="56dp"
		        android:layout_height="56dp"
		        android:src="@drawable/system_help"
		        android:layout_alignParentBottom="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="16dp"
		        android:layout_marginBottom="45dp"
		        yk:bg_color="@color/light_blue"
		        android:tint="@android:color/white"
		     />
</RelativeLayout>
