<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" 
    >
	    
     <com.sunnyit.common.view.TopBarView 
        android:id="@+id/topbar_pwup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/login_bg"
        yk:titletext="公司简介"
        yk:titletextcolor="#ffffff"
        yk:titletextsize="18sp"
        yk:lefttext="返回"
        yk:lefttextcolor="#ffffff"
        yk:lefttextsize="12sp"
        yk:leftbackground="@drawable/top_left_button"
        />
	    
	    <ScrollView 
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_below="@id/topbar_pwup"
		    android:scrollbars="vertical"
		    >
		    
	        <RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    >
			
			    <TextView
			        android:id="@+id/tv_introduce01"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/text_black"
			        android:textSize="15sp"
			         />
			
			    <ImageView
			        android:id="@+id/img_introduce01"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tv_introduce01"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:src="@drawable/company01" 
			        android:layout_centerHorizontal="true"
			        />
			    
			     <TextView
			        android:id="@+id/tv_introduce02"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/img_introduce01"
			        android:textColor="@color/text_black"
			        android:textSize="15sp"
			        />
			
			    <ImageView
			        android:id="@+id/img_introduce02"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tv_introduce02"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:src="@drawable/company02" 
			        android:layout_centerHorizontal="true"
			        />
			    
			     <TextView
			        android:id="@+id/tv_introduce03"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/img_introduce02"
			        android:textColor="@color/text_black"
			        android:textSize="15sp"
			         />
			
			    <ImageView
			        android:id="@+id/img_introduce03"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/tv_introduce03"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:src="@drawable/company03" 
			        android:layout_centerHorizontal="true"
			        />
			    
			     <TextView
			        android:id="@+id/tv_introduce04"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/img_introduce03"
			        android:textColor="@color/text_black"
			        android:textSize="15sp"
			        />
	       </RelativeLayout>
     </ScrollView>
</RelativeLayout>