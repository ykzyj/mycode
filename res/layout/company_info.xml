<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

     <com.sunnyit.common.view.TopBarView 
        android:id="@+id/topbar_company_info"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/login_bg"
        yk:titletext="企业信息"
        yk:titletextcolor="#ffffff"
        yk:titletextsize="18sp"
        yk:lefttext="返回"
        yk:lefttextcolor="#ffffff"
        yk:lefttextsize="12sp"
        yk:leftbackground="@drawable/top_left_button"
        yk:righttext="自查信息"
        yk:rightcolor="#ffffff"
        yk:rightsize="12sp"
        yk:rightbackground="@drawable/top_right_button"
        />
    
    <ScrollView 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	    android:layout_below="@id/topbar_company_info"
	    android:scrollbars="vertical"
	    >
	    
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#ffffff"
		    android:orientation="vertical"
		   	>
		   	
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="企业名称:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_companyName"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="企业地址:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_companyAddress"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="企业性质:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_companyProperty"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="监管层级:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_managerlayer"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="主管部门:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_departmentName"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="所属区域:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
		        <TextView 
		            android:id="@+id/tv_e_localName"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="5dp"
		            style="@style/normalText.size"
				    android:textSize="16.0dp"
		            />
		        
		    </LinearLayout>
		    
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/relativelayout_bg" 
		        android:gravity="center_vertical"
		        >
		        
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="所属行业:"
		            android:layout_marginLeft="10dp"
		            android:textColor="#FF7D899D"
		            android:textSize="16.0dp"
		            />
		        
