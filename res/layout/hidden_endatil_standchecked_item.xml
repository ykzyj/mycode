<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:minHeight="40dp"
    android:background="#ffffff"
    android:padding="5dp"
    android:orientation="horizontal"
    >
    
	<TextView
	    android:id="@+id/txt_stand_item_content"
	    android:layout_width="wrap_content"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:text="@string/info_content"
	    android:textSize="18sp"
	    android:textColor="@color/grey"
	    android:layout_gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    />
    
    <LinearLayout 
        android:id="@+id/lin_stand_item_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
         <RadioGroup 
		    android:id="@+id/rg_isok"  
   			android:layout_width="match_parent" 
   			android:layout_height="wrap_content"  
   			android:layout_marginLeft="10dp"
   			android:layout_marginRight="10dp"
   			android:focusable="false"
            >
               
           <RadioButton     
            	android:id="@+id/rb_ck_stand_rightnow"    
            	android:layout_width="match_parent"    
	            android:layout_height="wrap_content"  
	            android:text="立即整改"
	            android:textSize="12.0sp"     
	            android:gravity="center"   
	            android:button="@null"  
	            android:textColor="@drawable/radio_btn_color" 
	            android:background="@drawable/radio_blue_grey18"  
	            android:focusable="false"
	            />    
	        <RadioButton     
	            android:id="@+id/rb_ck_stand_limit"  
	            android:layout_width="match_parent"    
	            android:layout_height="wrap_content" 
	            android:layout_marginTop="5dp" 
	            android:text="限期整改" 
	            android:textSize="12.0sp"  
	            android:gravity="center"  
	            android:button="@null"  
	            android:textColor="@drawable/radio_btn_color" 
	            android:background="@drawable/radio_blue_grey18"  
	            android:focusable="false"
	            />    
   			
		</RadioGroup> 
        
    </LinearLayout>
	
</LinearLayout>
