<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="5dp" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >
    
	 <ImageView
	    android:id="@+id/img_publishInfo"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:src="@drawable/file_email96"
	    android:layout_centerVertical="true"
	    /> 
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@+id/img_publishInfo"
	    android:layout_centerVertical="true"
	    >
	
	    
	    <TextView
		    android:id="@+id/tv_tf_title_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="主题:"
		    android:textSize="14sp"
		    android:textColor="#9b9b9b"
		    />
	    
	   <TextView 
	       android:id="@+id/tv_tf_title"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	        android:textSize="14sp"
	        android:textColor="@color/light_blue"
	        android:text="主题"
	        android:layout_toRightOf="@+id/tv_tf_title_f"
	        android:maxLines="1"
	       />
	   
	   <TextView
		    android:id="@+id/tv_tf_sender_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="发件人:"
		    android:textSize="14sp"
		    android:textColor="#9b9b9b"
		    android:layout_marginTop="1dp"
		    android:layout_below="@+id/tv_tf_title"
		    android:layout_alignLeft="@+id/tv_tf_title_f"
		    />
	   
	   <TextView 
	        android:id="@+id/tv_tf_sender"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="王二"
	        android:textSize="14sp"
	        android:layout_marginTop="1dp"
	        android:textColor="@color/light_blue"
	        android:layout_below="@+id/tv_tf_title"
		    android:layout_toRightOf="@+id/tv_tf_sender_f"
		    android:maxLines="1"
	        />
	   
	   <TextView
		    android:id="@+id/tv_tf_sendTime_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="发送时间:"
		    android:textSize="14sp"
		    android:textColor="#9b9b9b"
		    android:layout_marginTop="1dp"
		    android:layout_below="@+id/tv_tf_title"
		    android:layout_toRightOf="@+id/tv_tf_sender"
		    android:layout_marginLeft="20dp"
		    />
	   
	   <TextView 
	        android:id="@+id/tv_tf_sendTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2015-11-06"
	        android:textSize="14sp"
	        android:layout_marginTop="1dp"
	        android:textColor="@color/light_blue"
	        android:layout_below="@+id/tv_tf_title"
		    android:layout_toRightOf="@+id/tv_tf_sendTime_f"
		    android:maxLines="1"
	        />
	   
	   <TextView
	        android:id="@+id/tv_tf_receiver_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="收件人:"
		    android:textSize="14sp"
		    android:textColor="#9b9b9b"
		    android:layout_marginTop="1dp"
		    android:layout_below="@+id/tv_tf_sender_f"
		    android:layout_alignLeft="@+id/tv_tf_title_f"
		    />
	   
	   <TextView 
	        android:id="@+id/tv_tf_receiver"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:text="张三"
	        android:textSize="14sp"
	        android:layout_marginTop="1dp"
	        android:textColor="@color/light_blue"
	        android:layout_below="@+id/tv_tf_sender_f"
		    android:layout_toRightOf="@+id/tv_tf_receiver_f"
		    android:maxLines="1"
	        />
	   
	   <TextView
		    android:id="@+id/tv_tf_receiveTime_f"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="接收时间:"
		    android:textSize="14sp"
		    android:textColor="#9b9b9b"
		    android:layout_marginTop="1dp"
		    android:layout_below="@+id/tv_tf_sender_f"
		    android:layout_toRightOf="@+id/tv_tf_receiver"
		    android:layout_marginLeft="20dp"
		    />
	   
	   <TextView 
	        android:id="@+id/tv_tf_receiveTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2015-12-01"
	        android:textSize="14sp"
	        android:layout_marginTop="1dp"
	        android:textColor="@color/light_blue"
	        android:layout_below="@+id/tv_tf_sender_f"
		    android:layout_toRightOf="@+id/tv_tf_receiveTime_f"
		    android:maxLines="1"
	        />
	        
	</RelativeLayout>
</RelativeLayout>