<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    >
    
    <ImageView
        android:id="@+id/menu_item_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rember_info" />
    
    <TextView 
        android:id="@+id/menu_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/menu_item_img"
        android:layout_marginLeft="10dp"
        android:text="@string/item_one"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />
    
    <ImageView
        android:id="@+id/right_go"
        android:layout_width="20dp"
        android:layout_height="20dp"
		android:layout_alignParentRight="true"    
		android:layout_centerVertical="true"    
        android:src="@drawable/right_go" />

</RelativeLayout>
