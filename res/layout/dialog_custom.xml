<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
   	android:layout_marginLeft="10dp"
   	android:layout_marginRight="10dp"
   	android:background="@drawable/white_circular5"
    >
    
    <TextView
        android:id="@+id/tv_dg_title"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:minWidth="300dp"
        android:gravity="center"
        android:text="提醒"
        android:background="@drawable/bg_blue14"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone"
        />
    
	<TextView 
	    android:id="@+id/tv_dg_context"
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    android:minHeight="40dp"
	    android:background="@drawable/white14"
	    android:visibility="gone"
	    android:textSize="18sp"
	    android:textColor="#6c6c6c"
	    android:gravity="center_vertical"
	    />    
	    
	<EditText 
	    android:id="@+id/et_dg_context"
	    android:layout_width="300dp"
	    android:layout_height="wrap_content"
	    android:minHeight="40dp"
	    android:hint="url地址(如192.168.1.10:8080)"
	    android:background="@drawable/white14"
	    android:visibility="gone"
	    android:textSize="18sp"
	    android:gravity="center_vertical"
	    />   
	
    <com.sunnyit.common.progressbar.HorizontalNumberProgressBar
            android:id="@+id/id_progressbarh"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:background="@drawable/white14"
            android:padding="10dp"
            android:visibility="gone"
            yk:progress_reached_bar_height="10dp"
            yk:progress_unreached_bar_height="10dp"
            yk:progress_text_color="#26af3d"
            yk:progress_reached_color="#26af3d"
            yk:progress_unreached_color="#c7c8c8"
            yk:progress_text_size="20sp"
            />

    <RelativeLayout 
        android:id="@+id/rel_cb_divider"
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#bababa"
        ></RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_but_divider"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minWidth="300dp"
        android:gravity="center"
        android:orientation="horizontal" 
        >

        <Button
            android:id="@+id/but_dg_positiveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rel_tree_bg"
            android:textColor="#6c6c6c"
            android:textSize="18sp"
            android:text="确认"
            android:layout_weight="1"
            />
        
         <RelativeLayout 
             android:id="@+id/rel_but_divider"
	        android:layout_width="1dp"  
	        android:layout_height="match_parent"  
	        android:background="#bababa"
	        ></RelativeLayout>
        
        <Button
            android:id="@+id/but_dg_negativeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rel_tree_bg"
            android:textColor="#6c6c6c"
            android:textSize="18sp"
            android:text="取消"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
