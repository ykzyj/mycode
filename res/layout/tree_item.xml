<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rel_tree_bg"
    android:descendantFocusability="blocksDescendants"
    >
    
    <ImageView 
        android:id="@+id/tree_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/mm_submenu_normal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerVertical="true"
        />
    
    <TextView 
        android:id="@+id/tree_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="节点内容"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/tree_icon"
        android:layout_centerVertical="true"
        android:maxLines="4"
        android:textColor="#9d9d9d"
        android:layout_marginRight="30dp"
        />
    
    <CheckBox
        android:id="@+id/tree_cb_leaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>
