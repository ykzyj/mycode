<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
   	android:background="#ffffff"
    >
    
    <TextView
        android:id="@+id/tv_dg_title"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:minWidth="400dp"
        android:gravity="center"
        android:text="法律信息搜索"
        android:background="@drawable/bg_blue14"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"   
		android:focusableInTouchMode="true"  
		android:paddingTop="10dp"
		android:background="@drawable/white14"
        >
        
        	<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/login_input"
		        android:orientation="horizontal" 
		        >
		
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="检索类型:"
		            android:textSize="16sp"
		            android:paddingLeft="10dp" 
		            android:textColor="@color/light_blue"
		            />
		
		        <com.sunnyit.common.view.ChoiceEditView
		            android:id="@+id/et_law_keyword"
		            android:layout_width="fill_parent"
		            android:layout_height="45dp"
		            android:background="#00ffffff"
		            android:paddingLeft="10dp" 
		            android:hint="请输入检索类型"
		            android:text="全部"
		            />
		    </LinearLayout>	
		    
        	<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/nei_title_bg"
		        android:orientation="horizontal" 
		        android:layout_marginTop="2dp"
		        android:visibility="gone"
		        >
		
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="检索范围:"
		            android:textSize="16sp"
		            android:paddingLeft="10dp" 
		            android:textColor="@color/light_blue"
		            />
		
		        <com.sunnyit.common.view.ChoiceEditView
		            android:id="@+id/et_law_publish"
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:background="#00ffffff"
		            android:paddingLeft="10dp" 
		            android:hint="请输入检索范围"
		            android:text="标题"
		            />
		    </LinearLayout>	
		    
        	<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginTop="3dp"
			    android:background="@drawable/login_input"
		        android:orientation="horizontal" 
		        >
		
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="检索内容:"
		            android:textSize="16sp"
		            android:paddingLeft="10dp" 
		            android:textColor="@color/light_blue"
		            />
		
		        <EditText
		            android:id="@+id/et_law_content"
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:background="#00ffffff"
		            android:paddingLeft="10dp" 
		            android:textSize="16sp"
		            android:hint="请输入检索内容"
		            />
		    </LinearLayout>	
        
		    <RelativeLayout 
		        android:id="@+id/rel_cb_divider"
		        android:layout_width="match_parent"  
		        android:layout_height="1dp"  
		        android:background="#bababa"
		        android:layout_marginTop="5dp"
		        />
		
		
		    <LinearLayout
		        android:id="@+id/lin_but_search"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:gravity="center"
		        android:orientation="horizontal" 
		        >
		
		        <Button
		            android:id="@+id/but_dg_standinfo_search"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="确认"
		            android:layout_weight="1"
		            />
		        
		         <RelativeLayout 
		            android:id="@+id/rel_but_divider"
			        android:layout_width="1dp"  
			        android:layout_height="match_parent"  
			        android:background="#bababa"
			        />
		        
		        <Button
		            android:id="@+id/but_dg_standinfo_cancel"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="取消"
		            android:layout_weight="1"
		            />
		    </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
