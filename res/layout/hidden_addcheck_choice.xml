<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <com.sunnyit.common.view.TopBarView 
	        android:id="@+id/topbar_hidden_add_choice"
	        android:layout_width="match_parent"
	        android:layout_height="48dp"
	        android:background="@drawable/login_bg"
	        yk:titletext="隐患自查信息添加"
	        yk:titletextcolor="#ffffff"
	        yk:titletextsize="18sp"
	        yk:lefttext="返回"
	        yk:lefttextcolor="#ffffff"
	        yk:lefttextsize="12sp"
	        yk:leftbackground="@drawable/top_left_button"
	        yk:righttext="提交"
	        yk:rightcolor="#ffffff"
	        yk:rightsize="12sp"
	        yk:rightbackground="@drawable/top_right_button"
	        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button
	        android:id="@+id/but_hidden_self" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="60dp"
	        android:textSize="16sp"
	        android:text="日常检查"
	        android:textColor="#ffffff"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:background="@drawable/but_rect_blue"
	        />
	    
	    <Button
	        android:id="@+id/but_hidden_stand" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="60dp"
	        android:textSize="16sp"
	        android:text="对照标准排查"
	        android:textColor="#ffffff"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:background="@drawable/but_rect_blue"
	        />
    </LinearLayout>
    
</LinearLayout>