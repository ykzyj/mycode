<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="#ffffff"
    android:orientation="horizontal" 
    >

    <RelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp" 
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/white14"
        >

        <!-- android:background="@drawable/rel_item_left" -->
        
        <ImageView
		    android:id="@+id/img_selfcheck_info"
		    android:layout_width="60dp"
		    android:layout_height="60dp"
		    android:src="@drawable/hiddentrouble160"
		    />
		<RelativeLayout 
		    android:id="@+id/rel_info_left"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/img_selfcheck_info"
		    android:layout_marginLeft="5dp"
		    android:layout_centerVertical="true"
		    >
		    
		    <TextView
			    android:id="@+id/f_txt_hidden_companyName"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentStart="true"
			    android:layout_alignParentLeft="true"
			    android:text="企业名称:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    />
		    
		    <TextView
			    android:id="@+id/txt_hidden_companyName"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="陕西山利科技发展有限责任公司"
			    android:maxLines="1"
			    android:textColor="@color/light_blue"
			    android:textSize="14sp"
			    android:layout_toRightOf="@+id/f_txt_hidden_companyName"
			    />
		    
		    <!-- <TextView
			    android:id="@+id/f_txt_hidden_no"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentStart="true"
			    android:layout_alignParentLeft="true"
			    android:text="检查编号:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    />
		    
		     <TextView
			    android:id="@+id/txt_hidden_no"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="2dp"
			    android:text="XIANJC2015"
			    android:textSize="14sp"
			    android:maxLines="1"
			    android:textColor="#00acff"
			    android:layout_toRightOf="@+id/f_txt_hidden_no"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    /> -->
		     
		     <TextView
			    android:id="@+id/f_txt_hidden_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="检查时间:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    android:layout_marginTop="1dp"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    android:layout_toRightOf="@+id/txt_hidden_no"
			    />
		    
		    <TextView
			    android:id="@+id/txt_hidden_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="20150820"
			    android:maxLines="1"
			    android:textColor="@color/light_blue"
			    android:textSize="14sp"
			    android:layout_marginTop="1dp"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    android:layout_toRightOf="@+id/f_txt_hidden_time"
			    />
		    
		    <TextView
			    android:id="@+id/f_txt_sc_deadline"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="整改期限:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    android:layout_marginLeft="10dp"
			    android:layout_marginTop="1dp"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    android:layout_toRightOf="@+id/txt_hidden_time"
			    />
		    
		    <TextView
			    android:id="@+id/txt_sc_deadline"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="20150820"
			    android:maxLines="1"
			    android:textColor="@color/light_blue"
			    android:textSize="14sp"
			    android:layout_marginTop="1dp"
			    android:layout_below="@+id/f_txt_hidden_companyName"
			    android:layout_toRightOf="@+id/f_txt_sc_deadline"
			    />
		     
		     <TextView
			    android:id="@+id/f_txt_hidden_inspector"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="检察人员:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    android:layout_marginTop="1dp"
			    android:layout_below="@+id/f_txt_hidden_time"
			    />
		    
		     <TextView
			    android:id="@+id/txt_hidden_inspector"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="李原话"
			    android:textSize="14sp"
			    android:maxLines="1"
			    android:textColor="@color/light_blue"
			    android:layout_marginTop="1dp"
			    android:layout_toRightOf="@+id/f_txt_hidden_inspector"
			    android:layout_below="@+id/f_txt_hidden_time"
			    />
		     
		     <TextView
			    android:id="@+id/f_txt_hidden_state"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="自查状态:"
			    android:textSize="14sp"
			    android:textColor="#9b9b9b"
			    android:layout_marginLeft="10dp"
			    android:layout_marginTop="1dp"
			    android:layout_toRightOf="@+id/txt_hidden_inspector"
			    android:layout_below="@+id/f_txt_hidden_time"
			    />
		    
		     <TextView
			    android:id="@+id/txt_hidden_state"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="已整改"
			    android:textSize="14sp"
			    android:textColor="@color/light_blue"
			    android:maxLines="1"
			    android:layout_marginTop="1dp"
			    android:layout_toRightOf="@+id/f_txt_hidden_state"
			    android:layout_below="@+id/f_txt_hidden_time"
			    />
        
    	</RelativeLayout>
    
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rel_right_bg" >

        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/user_pwd_edit"
            android:gravity="center"
            android:text="督促"
            android:textColor="#ffffff"
            android:textSize="14sp"
            />
    </RelativeLayout>

</LinearLayout>

