<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"  
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   	android:layout_marginLeft="10dp"
   	android:layout_marginRight="10dp"
   	android:background="@drawable/white_circular5"
    >
    
    <LinearLayout  
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" 
	    >
	    
        <TextView
	        android:id="@+id/tv_dg_basis"
	        android:layout_width="0dp"
	        android:layout_height="50.0dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="依据说明"
	        android:background="@drawable/bg_blue14"
	        android:textColor="#ffffff"
	        android:textSize="18sp"
	        />
        
        <TextView
	        android:id="@+id/tv_dg_punishment"
	        android:layout_width="0dp"
	        android:layout_height="50.0dip"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="罚则"
	        android:background="@drawable/white14"
	        android:textColor="#6c6c6c"
	        android:textSize="18sp"
	        android:visibility="gone"
	        />
        
    </LinearLayout>
    
    <RelativeLayout 
        android:id="@+id/rel_cb_divider_top"
        android:layout_width="match_parent"  
        android:layout_height="1dp"  
        android:background="#bababa"
        ></RelativeLayout>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            
            <TextView
		        android:id="@+id/tv_dg_context_basis"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/white14"
		        android:gravity="center_vertical"
		        android:textColor="#6c6c6c"
		        android:textSize="18sp" />
		    
		     <TextView
		        android:id="@+id/tv_dg_context_punishment"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/white14"
		        android:gravity="center_vertical"
		        android:textColor="#6c6c6c"
		        android:textSize="18sp" 
		        android:visibility="gone"
		        />
		     
	     	<RelativeLayout 
		        android:id="@+id/rel_cb_divider"
		        android:layout_width="match_parent"  
		        android:layout_height="1dp"  
		        android:background="#bababa"
		        ></RelativeLayout>
		
		
		    <LinearLayout
		        android:id="@+id/lin_but_divider"
		        android:layout_width="match_parent"
		        android:layout_height="50dp"
		        android:minWidth="300dp"
		        android:gravity="center"
		        android:orientation="horizontal" 
		        >
		
		        <Button
		            android:id="@+id/but_dg_positiveButton"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="确认"
		            android:layout_weight="1"
		            android:visibility="gone"
		            />
		        
		         <RelativeLayout 
		             android:id="@+id/rel_but_divider"
			        android:layout_width="1dp"  
			        android:layout_height="match_parent"  
			        android:background="#bababa"
			        android:visibility="gone"
			        />
		        
		        <Button
		            android:id="@+id/but_dg_negativeButton"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="取消"
		            android:layout_weight="1"
		            />
    		</LinearLayout>
        </LinearLayout>
        
    </ScrollView>
	    
</LinearLayout>
