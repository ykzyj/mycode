<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff"
    android:focusable="true"   
    android:focusableInTouchMode="true"  
    >
    
    <com.sunnyit.common.view.TopBarView 
        android:id="@+id/topbar_pwup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/login_bg"
        yk:titletext="用户信息修改"
        yk:titletextcolor="#ffffff"
        yk:titletextsize="18sp"
        yk:lefttext="返回"
        yk:lefttextcolor="#ffffff"
        yk:lefttextsize="12sp"
        yk:leftbackground="@drawable/top_left_button"
        yk:righttext="提交"
        yk:rightcolor="#ffffff"
        yk:rightsize="12sp"
        yk:rightbackground="@drawable/top_right_button"
        />
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        <LinearLayout 
            android:id="@+id/lay_scroll"
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="vertical"
            >
            <TextView 
		        android:id="@+id/tx_user_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="用户名"
		        android:textSize="16sp"
		        android:textColor="@color/grey"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="15dp"
		        />
		    
		    <EditText 
		        android:id="@+id/edit_user_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:hint="请输入用户名"
		       	android:textColorHint="@color/txt_hint_grey"
		       	android:enabled="false"
		       	android:textSize="14dp"
		        />
		    
		    <TextView 
		        android:id="@+id/tx_real_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="真实名称"
		        android:textSize="16sp"
		        android:textColor="@color/grey"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="15dp"
		        />
		    
		    <EditText 
		        android:id="@+id/edit_real_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:hint="请输入真实名称"
		        android:textColorHint="@color/txt_hint_grey"
		        android:textSize="14sp"
		        />
		    
		    <TextView 
		        android:id="@+id/tx_user_phone"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="电话"
		        android:textSize="16sp"
		        android:textColor="@color/grey"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="15dp"
		        />
		    
		    <EditText 
		        android:id="@+id/edit_user_phone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:hint="请输入电话号码"
		        android:textColorHint="@color/txt_hint_grey"
		        android:textSize="14dp"
		        />
		    
		    <TextView 
		        android:id="@+id/tx_user_email"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="邮箱"
		        android:textSize="16sp"
		        android:textColor="@color/grey"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="15dp"
		        />
		    
		    <EditText 
		        android:id="@+id/edit_user_email"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:hint="请输入邮箱"
		        android:textColorHint="@color/txt_hint_grey"
		        android:textSize="14dp"
		        />
            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>
