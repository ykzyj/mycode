    <com.sunnyit.common.view.ClickLoadListview
        android:id="@+id/ListView_hidden_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_chemical_name"
        android:cacheColorHint="#00000000"
        />
    
    
    <com.sunnyit.common.view.CustomFAB
	    android:id="@+id/company_hidden_search"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/system_help"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        yk:bg_color="@color/light_blue"
        android:tint="@android:color/white"
    	 />
    
