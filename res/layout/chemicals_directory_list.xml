<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"   
    android:focusableInTouchMode="true"  
    >
    
   <com.sunnyit.common.view.TopBarView 
        android:id="@+id/topbar_com_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/login_bg"
        yk:titletext="添加事件"
        yk:titletextcolor="#ffffff"
        yk:titletextsize="18sp"
        yk:lefttext="返回"
        yk:lefttextcolor="#ffffff"
        yk:lefttextsize="12sp"
        yk:leftbackground="@drawable/top_left_button"
        yk:righttext="全部"
        yk:rightcolor="#ffffff"
        yk:rightsize="12sp"
        yk:rightbackground="@drawable/top_right_button"
        />
   
   <com.sunnyit.common.view.SearchInfoView 
       android:id="@+id/search_chemical_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/topbar_com_name"
        yk:search_hint="输入搜索信息"
        yk:search_but_text="搜索"
        yk:search_but_text_color="#ffffff"
       />
   
