<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yk="http://schemas.android.com/apk/res/com.sunnyit"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
   	android:background="#ffffff"
    >
    
    <TextView
        android:id="@+id/tv_dg_title"
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:minWidth="400dp"
        android:gravity="center"
        android:text="标准信息搜索"
        android:background="@drawable/bg_blue14"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"   
		android:focusableInTouchMode="true"  
		android:paddingTop="10dp"
		android:background="@drawable/white14"
        >
        
        	<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/login_input"
		        android:orientation="horizontal" 
		        >
		
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="检索模式:"
		            android:textSize="16sp"
		            android:paddingLeft="10dp" 
		            android:textColor="@color/light_blue"
		            />
		
		        <ToggleButton
			        android:id="@+id/ToggleBut_stand_model"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@android:color/transparent"
			        android:button="@drawable/checkbox_opinion"
			        android:layout_marginLeft="5dp"
			        android:checked="false"
			        android:text=""
			        android:textOff="精确查找"
			        android:textOn="模糊匹配" 
			        />
		    </LinearLayout>	
        
            <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:layout_marginTop="3dp"
			    android:background="@drawable/login_input"
		        android:orientation="horizontal" 
		        >
		
		        <EditText
		            android:id="@+id/et_stand_info"
		            android:layout_width="fill_parent"
		            android:layout_height="40dp"
		            android:background="#00ffffff"
		            android:paddingLeft="10dp" 
		            android:textSize="16sp"
		            android:hint="请输入搜索内容"
		            />
		    </LinearLayout>
		    
		    <RelativeLayout 
		        android:id="@+id/rel_cb_divider"
		        android:layout_width="match_parent"  
		        android:layout_height="1dp"  
		        android:background="#bababa"
		        android:layout_marginTop="5dp"
		        />
		
		
		    <LinearLayout
		        android:id="@+id/lin_but_search"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:gravity="center"
		        android:orientation="horizontal" 
		        >
		
		        <Button
		            android:id="@+id/but_dg_standinfo_search"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="确认"
		            android:layout_weight="1"
		            />
		        
		         <RelativeLayout 
		            android:id="@+id/rel_but_divider"
			        android:layout_width="1dp"  
			        android:layout_height="match_parent"  
			        android:background="#bababa"
			        />
		        
		        <Button
		            android:id="@+id/but_dg_standinfo_cancel"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:background="@drawable/rel_tree_bg"
		            android:textColor="#6c6c6c"
		            android:textSize="18sp"
		            android:text="取消"
		            android:layout_weight="1"
		            />
		    </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>
